<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile_systems_project.View.EditBinarySystemPage"
             Title="EditBinarySystemPage">
    <StackLayout>
        <ListView x:Name="NumbersListView" ItemsSource="{Binding Numbers}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding NumericValue}" />
                            <Entry Text="{Binding TextualValue}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Save" Clicked="Button_Clicked" />
    </StackLayout>
</ContentPage>